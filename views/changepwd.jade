extends layout
block content
   form(class='form-horizontal' method='post')
      fieldset
         legend 用户注册
         div.control-group
            label(class='control-label' for='oldpassword') Old Password
            div.controls
               input(type='password' class='input-xlarge' id='oldpassword' name='oldpassword')
         div.control-group
            label(class='control-label' for='password') Password
            div.controls
               input(type='password' class='input-xlarge' id='password' name='newpassword')
         div.control-group
            label(class='control-label' for='password') Repeat Password
            div.controls
               input(type='password' class='input-xlarge' id='password-repeat' name='password-repeat')
         div.form-actions
            button(type='submit' class='btn btn-primary') Submit